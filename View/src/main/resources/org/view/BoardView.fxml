<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.view.BoardController" prefHeight="900" prefWidth="1600">

    <Label fx:id="boardSizeLabel" />

<HBox alignment="CENTER" spacing="20.0">
    <VBox alignment="CENTER" spacing="20.0">
        <Button fx:id="saveButton" onAction="#saveFile"/>
        <Button fx:id="loadButton" onAction="#loadFile"/>
    </VBox>
    <VBox alignment="CENTER" spacing="20.0">
        <Button fx:id="dbSaveButton" onAction="#saveToDB"/>
        <Button fx:id="dbLoadButton" onAction="#loadFromDB"/>
    </VBox>
</HBox>
    <GridPane fx:id="boardPane" alignment="CENTER"/>
    <Button fx:id="doStepButton" onAction="#doStep"/>

</VBox>