<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- VBOX służy do ustawienia elementów w pionie -->
<!-- alignment="CENTER" - ustawienie elementów w pionie na środku -->
<!-- spacing="20.0" - odstęp między elementami -->
<!-- fx:controller="org.view.HelloController" - kontroler dla pliku fxml -->
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.view.GOLController">
    <!-- padding - odstęp od krawędzi -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="languageButtonPL" />
        <Button fx:id="languageButtonEN" />
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="widthLabel"/>
        <TextField fx:id="widthField"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="heightLabel"/>
        <TextField fx:id="heightField"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="optionsLabel" />
        <RadioButton fx:id="option1"  selected="true"/>
        <RadioButton fx:id="option2" />
        <RadioButton fx:id="option3" />
    </HBox>

    <Button fx:id="confirmButton" />

</VBox>
